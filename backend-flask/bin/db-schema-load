#!/usr/bin/bash

GREEN='\033[1;32m'
NO_COLOR='\033[0m'
LABEL="db-schema-load"
printf "${GREEN}== ${LABEL}${NO_COLOR}\n"


echo "db-schema-load"

schema_path="$(realpath .)/db/schema.sql"
echo $schema_path


if [ "$1" = "prod" ]; then
  echo "Running in production mode"
  URL=$PROD_CONNECTION_URL
else
  URL=$CONNECTION_URL
fi


psql $CON_URL cruddur < $schema_path
