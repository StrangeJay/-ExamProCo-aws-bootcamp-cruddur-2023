#!/usr/bin/bash

GREEN='\033[1;32m'
NO_COLOR='\033[0m'
LABEL="db-seed"
printf "${GREEN}== ${LABEL}${NO_COLOR}\n"

seed_path="$(realpath .)/db/seed.sql"

echo $seed_path


if [ "$1" = "prod" ]; then
  echo "Running in production mode"
  URL=$PROD_CONNECTION_URL
else
  URL=$CONNECTION_URL
fi


psql $CONNECTION_URL cruddur < $seed_path
